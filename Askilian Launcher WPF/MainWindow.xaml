<Window x:Class="Askilian_Launcher_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Askilian_Launcher_WPF"
        xmlns:viewModel="clr-namespace:Askilian_Launcher_WPF.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>


    <Border Background="#272537"
            CornerRadius="30">



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="53"/>
                <ColumnDefinition Width="9"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Button x:Name="btnClose"
                    Grid.Column="2"
                    BorderThickness="0" 
                    Margin="0,18,0,17" 
                    HorizontalAlignment="Left" 
                    Width="23" 
                    Height="23"
                    Click="btnClose_Click">

                <Button.Background>
                    <ImageBrush  ImageSource="Images/icons8-cancel-40 (1).png"/>
                </Button.Background>

            </Button>

            <Button x:Name="btnMinimize"
                    Grid.Column="1"
                    BorderThickness="0" 
                    Margin="638,28,0,27" 
                    HorizontalAlignment="Left" 
                    Width="15" 
                    Height="20"
                    Click="btnMinimize_Click">

                <Button.Background>
                    <ImageBrush  ImageSource="/Images/icons8-subtract-40.png"/>

                </Button.Background>

            </Button>

            <Button x:Name="btnMove"
                    Grid.Column="1"
                    BorderThickness="0" 
                    Margin="658,30,0,30" 
                    HorizontalAlignment="Left" 
                    Width="15" 
                    Height="15"
                    PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">

                <Button.Background>
                    <ImageBrush  ImageSource="/Images/icons8-move-30.png" />

                </Button.Background>

            </Button>

            <Image Source="/Images/logo_askilian_256px.ico" 
                   Width="60"
                   Height="60"
                   Margin="52,10,68,5"/>


            <StackPanel Grid.Row="1">

                <RadioButton Content="Accueil"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Cursor="Hand"
                             Command="{Binding HomeViewCommand}"/>
                
                <RadioButton Background="Transparent"
                             BorderThickness="0"
                             Height="50"
                             Width="50"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Cursor="Hand"
                             Command="{Binding DiscoveryViewCommand}">
                    <WrapPanel>
                        <Image Source="/Images/logo_mirumorbis_256px.ico" />

                    </WrapPanel>
                </RadioButton>

                <RadioButton Content="Bientôt..."
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Cursor="Hand"
                             Command="{Binding SoonViewCommand}"/>

            </StackPanel>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Content="{Binding CurrentView}"/>

        </Grid>



    </Border>

</Window>
