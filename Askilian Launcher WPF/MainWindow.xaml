<Window x:Class="Askilian_Launcher_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Askilian_Launcher_WPF"
        xmlns:viewModel="clr-namespace:Askilian_Launcher_WPF.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>



    <Border Background="#272537"
            CornerRadius="30">



        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="53"/>
                <ColumnDefinition Width="9"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Button x:Name="btnClose"
                    Grid.Column="2"
                    BorderThickness="0" 
                    Margin="0,18,0,17" 
                    HorizontalAlignment="Left" 
                    Width="23" 
                    Height="23">

                <Button.Background>
                    <ImageBrush  ImageSource="Images/icons8-cancel-40 (1).png"/>
                </Button.Background>

            </Button>

            <Button x:Name="btnMinimize"
                    Grid.Column="1"
                    BorderThickness="0" 
                    Margin="618,28,0,27" 
                    HorizontalAlignment="Left" 
                    Width="15" 
                    Height="20">

                <Button.Background>
                    <ImageBrush  ImageSource="/Images/icons8-subtract-40.png"/>

                </Button.Background>

            </Button>

            <Button x:Name="btnMaximize"
                    Grid.Column="1"
                    BorderThickness="0" 
                    Margin="658,30,0,31" 
                    HorizontalAlignment="Left" 
                    Width="15" 
                    Height="15">

                <Button.Background>
                    <ImageBrush  ImageSource="/Images/icons8-maximize-button-40.png" />

                </Button.Background>

            </Button>
            
            <Button x:Name="btnMove"
                    Grid.Column="1"
                    BorderThickness="0" 
                    Margin="638,30,0,31" 
                    HorizontalAlignment="Left" 
                    Width="15" 
                    Height="15"
                    PreviewMouseLeftButtonDown="Grid_PreviewMouseLeftButtonDown">

                <Button.Background>
                    <ImageBrush  ImageSource="/Images/icons8-move-30.png" />
 
                </Button.Background>

            </Button>




            <TextBlock Text="Elysian"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="22" Height="29" Width="66"/>

            <StackPanel Grid.Row="1">

                <RadioButton Content="Home"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>

                <RadioButton Content="Discovery"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding DiscoveryViewCommand}"/>

                <RadioButton Content="Featured"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"/>

            </StackPanel>

            <TextBox Width="250"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5,18,0,17"
                     Grid.Column="1"
                     Style="{StaticResource ModernTexbox}"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            Content="{Binding CurrentView}"/>

        </Grid>



    </Border>

</Window>
